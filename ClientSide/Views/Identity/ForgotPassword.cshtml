@using ServiceLayer.ViewModels.IdentityViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="auths">
    <div class="container">
        <div class="auth shadow-box auth-forget" style="min-height: 200px; width: 500px; margin: auto;">
            <div class="row" style="min-height: inherit;">
                <div class="col-12">
                    <div class="auth-forms">
                        <div class="auth-forms-item">
                            <div class="auth-logo" style="padding: 15px 0;">
                                <a href="index.html"><img src="img/default-icon/logo.png" class="img-fluid" alt=""></a>
                            </div>
                            <div class="auth-title">
                                <h3>فراموشی رمز عبور</h3>
                            </div>
                            <div class="auth-form">
                                <form method="post">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                                            <input asp-for="PhoneNumber" type="text" placeholder="شماره موبایل" class="form-control">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center flex-column align-items-center flex-wrap">
                                        <button type="submit" class="btn-login me-2 waves-effect waves-light">
                                            <i class="bi bi-person"></i>
                                            ارسال کد تایید
                                        </button>

                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
                            }

