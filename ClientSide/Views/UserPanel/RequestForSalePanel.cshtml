@using ServiceLayer.ViewModels.StoreViewModels
@model ManageSellerViewModel
@{
	ViewData["Title"] = "درخواست پنل فروشندگی";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int request = ViewBag.StatusSeller;
}

<div class="content">
	<div class="dashboard">
		<div class="container-fluid">
			<div class="row">
				<partial name="_UserPanelSidebar" />
				<div class="col-lg-9">
					<div class="content-box" style="padding:40px 20px;">
						<div class="row">
							<div class="col-12">
								<div class="ui-boxs">
									<div class="ui-box">
										<div class="ui-box-item ui-box-white">
											<div class="ui-box-item-title">
												<div class="d-flex justify-content-between align-items-center">
													<h4 class="fw-bold">
														ارسال درخواست برای پنل فروشندگی
													</h4>
												</div>
											</div>
											<div class="ui-box-item-desc p-0">
												@if(request == -1)
												{
													<div class="row m-3">
														<div class="alert alert-primary text-center" role="alert">
															<p>لطفا قبل از درخواست پنل فروشندگی اطلاعات کاربری خود را تکمیل کنید</p>
														</div>
													</div>
													<form method="post" enctype="multipart/form-data">

														<div class="row m-4">
															<div class="col-12">
																<div class="form-group">
																	<label>توضیحات خود را جهت همکاری با تیزهوشان ارائه دهید</label>
																	<textarea type="text" class="form-control" asp-for="Description"></textarea>
																	<span asp-validation-for="Description" class="text-danger"></span>
																</div>

															</div>


															<div class="col-12">
																<button type="submit" class="btn btn-success" id="SubmitBtn">ارسال درخواست</button>
															</div>
														</div>


													</form>
												}
												@if(request == 1)
												{
													<div class="row m-3">
														<div class="alert alert-info text-center" role="alert">
															<p>کاربر گرامی درخواست شما در حال پیگیری است لطفا برای اطلاعات بیشتر با پشتیبانی تماس بگیرید</p>
														</div>
													</div>
												}
												@if (request == 3)
												{
													<div class="row m-3">
														<div class="alert alert-danger text-center" role="alert">
															<p>کاربر گرامی متاسفانه درخواست شما رد شده است. برای اطلاعات بیشتر میتوانید با پشتیبانی تماس بگیرید</p>
														</div>
													</div>
												}
												@if (request == 2)
												{
													<div class="row m-3">
														<div class="alert alert-success text-center" role="alert">
															<p>کاربر گرامی درخواست شما با موفقیت تایید شده است</p>
														</div>
													</div>
												}

											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end dashboard -->
</div>

												
														@section Scripts{
	<partial name="_ValidationScriptsPartial"></partial>
														}