@if (TempData["success"] != null){
    <script>
        let message = $("#message1").val();

        const Toast = Swal.mixin({
            toast: true,
            position: 'top-right',
            iconColor: 'white',
            customClass: {
                popup: 'colored-toast'
            },
            showConfirmButton: false,
            timer: 3500,
            timerProgressBar: true
        })
        Toast.fire({
            icon: 'success',
            title: message
        })
    </script>
}
